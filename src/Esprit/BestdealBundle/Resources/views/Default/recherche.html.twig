						{% for produit in deal.produits%}
                                                        <li class="span3 new-product jcarousel-item jcarousel-item-horizontal jcarousel-item-1 jcarousel-item-1-horizontal" jcarouselindex="1" style="float: left; list-style: none;"> 
							<div class="new-product-image">
								
								<a href="{{url('esprit_bestdeal_produit',{id:''~produit.id})}}"><img src="{{ asset ('upload/'~produit.image~'')}}" alt=""></a>
							</div>	
							<div class="new-product-info">	
								<div>
									<div class="new-product-price">{{produit.prix}} DT</div>
									<div class="new-product-bg">
										
										<div class="new-product-details"><a href="{{url('esprit_bestdeal_produit',{id:''~produit.id})}}">Details</a></div>
									</div>			
								</div>
							</div>
							<div class="new-product-content">
								<div class="new-product-title">
									<a href="#"><p>{{produit.nom}}</p></a>
								</div>
								<div class="new-product-content">
									<p>{{produit.description}}</p>
								</div>
							</div>
						</li>
                                                
                                                {% endfor%}
											
					</ul></div><div class="jcarousel-prev jcarousel-prev-horizontal jcarousel-prev-disabled jcarousel-prev-disabled-horizontal" disabled="disabled" style="display: block;"></div><div class="jcarousel-next jcarousel-next-horizontal" style="display: block;"></div></div></div>
				</div>	
					{% endfor%}
                                
                                {% endif%}
					
			</div>	
			

			<div class="container main" id="second-carousel-slide">
				
			</div>	
		</div>

{% endblock%}